# Backend Environment Variables - EXAMPLE
# Copy this to .env and fill in your values

# API Keys
GEMINI_API_KEY=your_gemini_api_key_here

# Kolors Virtual Try-On API (OFFICIAL)
# Get your API key from: https://www.kolors.com/
KOLORS_API_KEY=your_kolors_api_key_here
KOLORS_API_BASE_URL=https://api.kolors.com
KOLORS_MODEL_VERSION=kolors-virtual-try-on-v1
KOLORS_TIMEOUT=60
KOLORS_POLL_INTERVAL=2

# Virtual Try-On Feature
VIRTUAL_TRYON_ENABLED=false  # Set to 'true' to enable
TRYON_RESULT_DIR=./tryon_results

# Paths (optional - defaults to ./data)
# DATA_PATH=./data

# Server Ports
BACKEND_PORT=8000
FRONTEND_PORT=3000
